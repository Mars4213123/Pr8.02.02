<UserControl x:Class="Weather_Кантуганов.Elements.item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="130" Height="110" Margin="5">

    <Border BorderBrush="LightGray" BorderThickness="1" Background="White">
        <StackPanel Margin="5">
            <Label x:Name="lHour" FontWeight="Bold" HorizontalAlignment="Center" Padding="2"/>
            <Label x:Name="lTemp" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Padding="2"/>
            <Label x:Name="lCondition" HorizontalAlignment="Center" Padding="2"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Вл:" FontSize="10" Padding="2,0,0,0"/>
                <Label x:Name="lHumandity" FontSize="10" Padding="0"/>
            </StackPanel>
            <Label x:Name="lPrecType" FontSize="9" HorizontalAlignment="Center" Padding="2"/>
        </StackPanel>
    </Border>

</UserControl>